<h1>Entrar</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form">

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.text_field :email,value: formata_email(@user.email) %>

  </div>

  <div class="field">
    <%= f.label :senha %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <!-- <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"Lembrar-me" %>
    </div>
  <% end -%> -->

  <div class="actions">
    <%= f.submit "Entrar", class: "btn-submit" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
