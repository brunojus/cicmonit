<p id="notice"><%= notice %></p>

<h1>Listar Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Semestre</th>
      <th>Ira</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.matricula %></td>
        <td><%= aluno.semestre %></td>
        <td><%= aluno.IRA %></td>
        <td><%= link_to 'Mostrar', aluno %></td>
        <td><%= link_to 'Editar', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Apagar', aluno, method: :delete, data: { confirm: "VocÃª tem certeza que deseja excluir o dicente #{aluno.nome}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

