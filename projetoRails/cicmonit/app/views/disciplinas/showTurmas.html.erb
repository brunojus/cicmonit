<% turma = @turma.turmas %>
<% turma.each do|turma| %>
<font face="Arial"><table></font>

<tr>
	<table STYLE="border: 1px solid #E7E7E7" cellpadding="5" cellspacing="0">
			<th><%= check_box_tag(:turma_id) %><%= label_tag(:turma_id) %> <%= turma.nome %></th>
	<tr bgcolor="6B9A8C" >
		<th>Horarios & Local</td>
	</tr>
	<% horario = turma.horarios %>
