	<% else %>
		<tr bgcolor="FFF7F7" > <%#verde%>
	<% end %>
	<td><%= horario.nome %></td>
	</tr>
	<% end %>

	<tr bgcolor="6B9A8C">
		<th>Professores</td>
	</tr>
	<% docente = turma.docentes%>
	<% docente.each do|docente| %>
	<% if docente.id % 2 == 0 %>
		<tr bgcolor="E7F3D6" >
	<% else %>
		<tr bgcolor="FFF7F7" >
	<% end %>
	<td><%= docente.nome %></td>
	</tr>
	<% end %>
	</table>
		</tr>
<% end %>
</table>
