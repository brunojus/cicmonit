<p id="notice"><%= notice %></p>

<h1>Listar Professores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Email</th>
      <th colspan="3" hidden="hidden"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.matricula %></td>
        <td><%= professor.email %></td>
        <td><%= link_to image_tag("show.png"), professor %></td>
        <td><%= link_to image_tag("edit.png"), edit_professor_path(professor) %></td>
      <td><%= link_to image_tag("delete.png"), professor, method: :delete, data: { confirm: "VocÃª tem certeza que deseja excluir o docente #{professor.nome}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

